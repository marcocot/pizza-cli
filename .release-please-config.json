{
    "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
    "release-type": "manifest",
    "include-component-in-tag": true,
    "changelog-sections": [
        {
            "type": "feat",
            "section": "Features"
        },
        {
            "type": "fix",
            "section": "Bug Fixes"
        },
        {
            "type": "perf",
            "section": "Performance"
        },
        {
            "type": "refactor",
            "section": "Refactoring"
        },
        {
            "type": "docs",
            "section": "Documentation"
        },
        {
            "type": "test",
            "section": "Tests"
        },
        {
            "type": "build",
            "section": "Build System"
        },
        {
            "type": "ci",
            "section": "CI"
        },
        {
            "type": "chore",
            "section": "Chores"
        }
    ],
    "packages": {
        "pizza-core": {
            "release-type": "rust",
            "component": "pizza-core",
            "changelog-path": "CHANGELOG.md"
        },
        "pizza-cli": {
            "release-type": "rust",
            "component": "pizza-cli",
            "changelog-path": "CHANGELOG.md"
        }
    }
}